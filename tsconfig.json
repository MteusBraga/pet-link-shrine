{
  "compilerOptions": {
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@types": ["@types/index"],
      "@schemas/*": ["schemas/*"],
      "@controllers/*": ["controllers/*"],
      "@lib/*": ["lib/*"],
      "@middlewares/*": ["middlewares/*"],
      "@repositories/*": ["repositories/*"],
      "@router/*": ["router/*"],
      "@services/*": ["services/*"],
      "@connections/*": ["connections/*"],
      "@/*": ["*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
